<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_resource"
    tools:context=".driver_reps_first">

    <androidx.constraintlayout.widget.ConstraintLayout

     android:layout_width="match_parent"
     android:layout_height="match_parent"
     app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView2"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent">

        <TextView
    android:id="@+id/reputation_list_textView"
    android:layout_width="409dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Drivers Rating:"
    android:textSize="22sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
    android:id="@+id/textView"
    android:layout_width="287dp"
    android:layout_height="90dp"
    android:layout_marginTop="16dp"
    android:fontFamily="sans-serif-condensed-medium"
    android:gravity="center"
    android:text="INFLUENCE"
    android:textColor="@color/material_on_primary_emphasis_medium"
    android:textSize="56sp"
    android:textStyle="italic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reputataion_list_recyclerView"
            android:layout_width="397dp"
            android:layout_height="0dp"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reputation_list_textView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>